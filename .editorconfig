root = true

[*]
charset = utf-8
indent_size = 4
indent_style = tab
end_of_line = crlf
max_line_length = 80
insert_final_newline = true
trim_trailing_whitespace = true

[*.rs]
indent_size = 4
indent_style = space

[*.toml]
indent_size = 2
indent_style = space

[*.yml]
indent_size = 2
indent_style = space

[*.md]
indent_style = space
trim_trailing_whitespace = false